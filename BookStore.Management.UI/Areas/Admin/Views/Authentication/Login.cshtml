@model BookStore.Management.UI.Areas.Admin.Models.LoginModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Required meta tags-->
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="au theme template">
    <meta name="author" content="Ngoc Hai">
    <meta name="keywords" content="au theme template">

    <!-- Title Page-->
    <title>Login</title>

    <!-- Bootstrap CSS-->
    <link href="~/admin/assets/libs/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Vendor CSS-->
    <!-- Main CSS-->
    <link href="~/admin/scss/theme.css" rel="stylesheet" media="all" />
</head>

<body class="animsition">
    <div class="page-wrapper">
        <div class="page-content--bge5">
            <div class="container">
                <div class="login-wrap">
                    <div class="login-content">
                        <div class="login-logo">
                            <a href="#">
                                <img src="~/admin/assets/images/icon/logo.png" alt="CoolAdmin">
                            </a>
                        </div>
                        <div class="login-form">
                            <span class="text-danger">@Html.Raw(ViewBag.Error)</span>
                            <form asp-controller="authentication" asp-action="login" method="post" asp-antiforgery="true" >
                                <div class="form-group">
                                    <label>Username</label>
                                    <input asp-for="Username" type="text" class="au-input au-input--full" placeholder="Username">
                                    
                                </div>
                                <span class="text-danger" asp-validation-for="Username"></span>
                                <div class="form-group">
                                    <label>Password</label>
                                    <input asp-for="Password" class="au-input au-input--full" type="password"placeholder="Password">
                                    
                                </div>
                                <span class="text-danger" asp-validation-for="Password"></span>
                                <div class="login-checkbox">
                                    <label>
                                        <input type="checkbox" asp-for="HasRememberMe">Remember Me
                                    </label>
                                    
                                </div>
                                <button class="au-btn au-btn--block au-btn--green m-b-20" type="submit">sign in</button>
     
                            </form>
                            
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

    <!-- Jquery JS-->
    <script src="~/admin/assets/libs/jquery/jquery-3.2.1.min.js"></script>
    <script src="~/admin/assets/libs/animsition.min.js"></script>

    <script src="~/admin/assets/libs/main.js"></script>


</body>

</html>
<!-- end document-->
