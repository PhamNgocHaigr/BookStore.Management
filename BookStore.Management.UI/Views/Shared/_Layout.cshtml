
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BookStore.Management.UI</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="~/js/toaster/jquery.toast.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="~/BookStore.Management.UI.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-secondary p-2">
            <a class="navbar-brand text-light" href="#">Book Sale</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="d-flex w-100">
                <div class="flex-grow-1 p-2">
                    <ul class="navbar-nav">
                        <li class="nav-item active">
                            <a class="nav-link text-light" asp-controller="home">Home </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-controller="shop">Shop</a>
                        </li>
                    </ul>
                </div>
                <div class="p-2">
                    <partial name="_LoginPartial.cshtml" />
                </div>

            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/toaster/jquery.toast.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/jquery.blockui.js"></script>
    <script src="~/js/toaster/common.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
